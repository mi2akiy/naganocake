<div class="container">
  
  <div class="row m-2">
    <div>
      <h4>ログイン</h4>
    </div>
  </div>
  
  <div class="row m-2">
    <div class="offset-1">
      <h4>会員の方はこちらからログイン</h4>
    </div>
  </div>
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row form-inline m-2">
      <div class="col-3 offset-1">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", style:"width:100%;"  %>
      </div>
    </div>
    
    <div class="row form-inline m-2">
      <div class="col-3 offset-1">
        <%= f.label :パスワード %>
      </div>
      <div class="col-6">
        <%= f.password_field :password, autocomplete: "current-password", style:"width:100%;" %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3 offset-4">
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
    </div>
    <% end %>
    
    <div class="row ml-2 mt-4">
      <div class="offset-1">
        <h4>会員登録がお済みでない方</h4>
      </div>
    </div>
    
    <div class="row">
      <div class="offset-3">
        <%= render "public/shared/links" %>
      </div>
    </div>




</div>