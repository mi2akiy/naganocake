<div class="container form-inline">

  <!--サイドバー-->
  <div class="col-3">
    <table class="table table-bordered border-dark table-hover">
      <th>
        ジャンル検索
      </th>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!--商品一覧-->
  <div class="col-9">
    <div class="form-inline">
      <h4>商品一覧</h4>
      <p>（全<%= @items.count %>件）</p>
    </div>
    <div class="d-flex p-2 bd-highlight flex-wrap">
      <% @items.each do |item| %>
        <div class="item m-2">
          <div class="item-image">
            <%= link_to public_item_path(item.id) do %>
              <%= image_tag item.get_item_image(180,180) %>
            <% end %>
          </div>
          <div class="item-name">
            <%= link_to public_item_path(item.id), class:"text-dark" do %>
              <strong><%= item.name %></strong>
            <% end %>
          </div>
          <div class="item-price">
            ¥<%= item.price.ceil.to_s(:delimited) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mx-auto" style="width: 200px;">
    <%= paginate @items %>
  </div>
</div>