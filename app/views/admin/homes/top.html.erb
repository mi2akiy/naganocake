<div class="container">
  <h4>注文履歴一覧</h4>
  <table class="table">
    <th>
      購入日時
    </th>
    <th>
      購入者
    </th>
    <th>
      注文個数
    </th>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.created_at %>
        </td>
        <td>
          <%= order.customer.name %>
        </td>
        <td>
          <%= order.amount %>
        </td>
      </tr>
  </table>
</div>