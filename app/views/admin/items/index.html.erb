<div class="container">
  <div class="row m-4">
    <div class="col-3">
      <h4>商品一覧</h4>
    </div>
    <div class="col-1 offset-8">
       <%= link_to "＋", new_admin_item_path, class:"btn rounded-circle p-0 btn-light", style:"width:2rem;height:2rem;"  %>
    </div>
  </div>

  <table class="table table-bordered border-dark">
    <th class="table-active">
      商品ID
    </th>
    <th class="table-active">
      商品名
    </th>
    <th class="table-active">
      税抜価格
    </th>
    <th class="table-active">
      ジャンル
    </th>
    <th class="table-active">
      ステータス
    </th>

    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
        </td>
        <td>
          <%= item.price.to_s(:delimited) %>
        </td>
        <td>
          <%= item.genre.name %>
        </td>
        <td>
          <%= item.status %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= paginate @items %>
</div>