<div class="container">
 <div class="row m-2">
  <div>
   <h4>商品詳細</h4>
  </div>
 </div>
 
 <div class="row m-2">
   <div class="col-3">
     <%= image_tag @item.get_item_image(250,250) %>
   </div>
   <div class="col-9">

    <div class="form-inline m-2">
       <div class="col-4">
         商品名
       </div>
       <div class="col-5">
         <%= @item.name %>
       </div>
     </div>

     <div class="form-inline m-2">
       <div class="col-4">
         商品説明
       </div>
       <div class="col-5">
         <%= @item.introduction %>
       </div>
     </div>

     <div class="form-inline m-2">
       <div class="col-4">
         ジャンル
       </div>
       <div class="col-5">
         <%= @item.genre.name %>
       </div>
     </div>

     <div class="form-inline m-2">
       <div class="col-4">
         税込価格（税抜価格）
       </div>
       <div class="col-5">
         <%= @item.taxin_price.ceil.to_s(:delimited) %>(<%= (@item.price.to_s(:delimited)) %>)円
       </div>
     </div>

      <div class="form-inline m-2">
       <div class="col-4">
         販売ステータス
       </div>
       <div class="col-5 text-success font-weight-bold">
         <%= @item.status %>
       </div>
     </div>

   </div>
 </div>

 <div class="row">
   <div class="col-md-6 offset-md-5">
      <%= link_to "編集する", edit_admin_item_path, class:"btn btn-success" %>
   </div>
 </div>

</div>