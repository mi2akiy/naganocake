<div class="container">
 
  <% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <div class="row m-2">
  <div>
   <h4>商品編集</h4>
  </div>
 </div>
 
 <%= form_with model: @item, url:admin_item_path, method: :patch do |f| %>
    <div class="row form-inline m-2">
     <div class="col-3">
       <%= f.label :商品画像 %>
     </div>
     <div class="col-6">
      <%= f.file_field :item_image, placeholder: "商品画像", accept: "image/*" %>
     </div>
   </div>
 
    <div class="row form-inline m-2">
     <div class="col-3">
       <%= f.label :商品名 %>
     </div>
     <div class="col-6">
      <%= f.text_field :name, placeholder: "商品名", accept: "name", style:"width:90%;" %>
     </div>
   </div>
 
    <div class=" row form-inline m-2">
     <div class="col-3">
       <%= f.label :商品説明 %>
     </div>
     <div class="col-6">
      <%= f.text_area :introduction, placeholder: "商品説明", accept: "introduction", style:"width:90%;" %>
     </div>
   </div>
 
    <div class="row form-inline m-2">
     <div class="col-3">
       <%= f.label :ジャンル %>
     </div>
     <div class="col-6">
        <%= f.collection_select :genre_id,@genres.all, :id, :name, include_blank: "--選択して下さい--　　　　　　　　　　　　　　　　　　　", style:"width:90%;" %>
     </div>
   </div>
 
   <div class="row form-inline m-2">
     <div class="col-3">
       <%= f.label :税抜価格 %>
     </div>
     <div class="col-6">
      <%= f.text_field :price, placeholder: "1000", accept: "price", style:"width:90%;" %>円
     </div>
   </div>
 
    <div class="row form-inline m-2">
     <div class="col-3">
       <%= f.label :販売ステータス %>
     </div>
     <div class="col-2 form-inline">
      <%= f.label :status, '販売中', value: 1 %>
    　 <%= f.radio_button :status, '販売中' %>
     </div>
     <div class="col-2 form-inline">
   　  <%= f.label :status, '販売停止中', value: 0 %>
   　  <%= f.radio_button :status, '販売停止中' %>
     </div>
   </div>
 
   <div class="row m-2">
    <div class="col-3 offset-5">
     <%= f.submit "変更を保存", class:"btn btn-success" %>
    </div>
   </div>
 
 <% end %>



</div>