<div class="container">

<h4>ジャンル一覧・追加</h4>

  <%= form_with model: @genre,url:admin_genres_path, method: :post do |f| %>
  <div class="form-inline">
    <div>
      <%= f.label :ジャンル名 %>
    </div>
    <div>
      <%= f.text_field :name %>
    </div>
    <div class="actions">
      <%= f.submit "新規登録",class:"btn btn-sm btn-success" %>
    </div>
  </div>
  <% end %>


<table class="table">
  <th>
    ジャンル
  </th>
  <th>

  </th>
  <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
      </td>
      <td>
        <%= link_to "編集する",edit_admin_genre_path(genre.id), class:"btn btn-sm btn-success" %>
      </td>
    </tr>
  <% end %>
</table>

</div>