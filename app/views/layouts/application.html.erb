<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
       <nav class="navbar navbar-expand-lg">
         <div class="container border-bottom">
           <a class="navbar-brand" href="/">
              <span>LOGO</span>
           </a>
           <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if customer_signed_in? %>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "マイページ",public_customers_path %>
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "商品一覧", public_items_path %>
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "カート", public_cart_items_path %>
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
                  </button>
                <% elsif admin_signed_in? %>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "商品一覧", public_items_path %>
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "会員一覧", admin_customers_path %>
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "注文履歴一覧", admin_orders_show_path %>
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "ジャンル一覧", admin_genres_path %>
                  </button>  
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
                  </button>
                <% else %>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "about", homes_about_path %>
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "商品一覧", public_items_path %>
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "新規登録", new_customer_registration_path %>
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" type="button">
                    <%= link_to "ログイン", new_customer_session_path %>
                  </button>
                <% end %>
              </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
